<!DOCTYPE HTML>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>prompt</title>
  <script type="text/javascript">
  function rec(){
	var score; //score变量，用来存储用户输入的成绩值。
	score =   prompt("写你成绩：","sss")    ;
	if(score>=90)
	{
	   document.write("你很棒!");
	}
	else if(score>=75)
    {
	   document.write("777!");
	}
	else if(score>=60)
    {
	   document.write("888!");
    }
    else
	{
       document.write("999!");
	}
  }
  </script>
</head>
<body bgcolor="blue">
    <input name="button" type="button" onClick="rec()" value="点击我，对成绩做评价!" />
</body>
</html>
